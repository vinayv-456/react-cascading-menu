{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "es6",
    // "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "noEmit": false,
    "outDir": "./build",
    "jsx": "react",
    "noImplicitAny": true,
    // "jsx": "react-jsx"
    "declaration": true,
    "declarationDir": "./build",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "custom.d.ts", "src/**/*.test.ts", "src/**/*.test.tsx", "**/*.test.ts", "**/*.test.tsx", "example/src/App.test.js"],
  "exclude": ["node_modules"]
}